@import url('https://fonts.googleapis.com/css?family=Asul&display:swap');

@font-face {
  font-family: "fantasyscript";
  src: url("/fonts/fantasyscript.ttf") format("truetype");
  font-style: normal;
  font-weight: normal;
}

body {
	font-family: "Asul", sans-serif;
	line-height: 1.5em;
}

h1, h2, h3, h4, h5, h6 {
	margin: 0;
	padding: 0;
	font-weight: bold;
	font-family: "Asul", sans-serif;
}

h5 {
	padding-top: 55px !important;
}

.script {
	font-family: "fantasyscript";
	font-size: 30px;
	margin-top: 8px;
}

// Header
header.navbar {
	border: 0;
	box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
}

// Sidebar
aside.sidebar {
	background: none;
	border: 0;
}

aside.sidebar .sidebar-group:not(.collapsable) .sidebar-heading:not(.clickable) {
	margin-bottom: 0.5rem;
}

aside.sidebar .sidebar-group-items li {
	margin-bottom: 0.5rem;
}

aside.sidebar .sidebar-sub-headers li {
	margin: 0;
}

aside.sidebar .sidebar-sub-header a.sidebar-link {
	font-weight: 400 !important;
}

aside.sidebar a.sidebar-link.active {
	background: linear-gradient(to right, rgba(150, 104, 0, 0.2196078431372549) 0%, rgba(255, 255, 255, 0) 100%);
}

aside.sidebar .sidebar-group a.sidebar-link {
	font-weight: bold;
}

aside.sidebar .sidebar-heading span {
	color: #775200;
}

// Buttons
.theme-container .home .hero .action-button {
	padding: 8px 40px;
	box-shadow: 0 3px 4px rgba(0, 0, 0, 0.4);
	transition: 0.3s all ease-in-out;
}

.theme-container .home .hero .action-button:active {
	box-shadow: none;
	transition: 0.3s all ease-in-out;
}

// Homepage
.is--homepage main.home .feature {
	padding: 0;
}

.is--homepage main.home .footer {
	border: 0;
}

.is--homepage main.home .hero img {
	margin-top: 20%;
	max-height: 130px;
}

.is--homepage {
	background-image: url('/assets/img/bg-home-white.jpg');
	background-size: cover;
	background-repeat: no-repeat;
	min-height: 100vh;
	background-position: center center;
}

.is--homepage header.navbar {
	border: 0;
	background: none;
	box-shadow: none;
}

.is--homepage .navbar .links {
	background: none;
}

// Content
main.page {
	background-image: url('/assets/img/bg-body.png');
	background-repeat: repeat;
	background-attachment: fixed;
	min-height: calc(100vh - 65px);
}

.theme-default-content:not(.custom) p a {
	border-bottom: 2px solid;

	&:hover {
		text-decoration: none;
	}
}

.theme-default-content:not(.custom) h2 {
	font-size: 26px;
}

.theme-default-content:not(.custom) h2 > i {
	font-size: 20px;
}

.theme-default-content:not(.custom) h3 {
	font-size: 22px;
}

.theme-default-content:not(.custom) h4 {
	font-size: 18px;
}

.theme-default-content:not(.custom) {
	position: relative;
	z-index: 9;
	margin: 2rem auto;
	background-color: #fff;
	box-shadow: 0 3px 5px rgba(0, 0, 0, 0.1);
	h2 {
		padding-bottom: 0.5rem !important;
		border-bottom: 2px solid rgba(160, 109, 0, 0.5);
	}
}

// Typography
.theme-default-content:not(.custom) p {
	line-height: 1.5em;
}

.theme-default-content:not(.custom) h1 {
	color: #775200;
}

// Content > Dropcap only on first paragraph
.theme-default-content:not(.custom) h1 + p:first-letter {
	text-transform: uppercase;
	// font-family: 'Cinzel Decorative', cursive;
	font-size: 56px;
	font-weight: bold;
	vertical-align: bottom;
	float: left;
	line-height: 0.9;
	margin-right: 0.1em;
	margin-left: -0.05em;
	margin-top: -0.05em;
}

.theme-default-content:not(.custom) img {
	background: none;
	margin: 20px 10px;
	float: right;
	clear: both;
	width: auto;
	max-width: 300px;
}

.theme-default-content:not(.custom) .fullwidth {
	max-width: 100% !important;
	padding: 0;
	margin: 20px 0;
}

.theme-default-content:not(.custom) img:first-child {
	background: #fff;
	margin: 0;
	padding: 1rem;
	float: right;
	clear: both;
}

// Content > Blockquote
.theme-default-content:not(.custom) blockquote {
	margin: 0;
	border: 0;
	padding: 0;
}

.theme-default-content:not(.custom) blockquote > p {
	color: #565656;
	padding: 10px 20px;
	background: #f1f1f1;
}

svg.go-to-top {
	color: #775200 !important;
}

// Responsive

// Tablet
@media (min-width: 721px) and (max-width: 1199px) {
	header.navbar .site-name.can-hide {
		display: none;
	}
}

// Smartphone
@media (max-width: 720px) {
	header.navbar .site-name.can-hide {
		display: inline-block;
	}

	header.navbar .sidebar-button svg.icon path {
		fill: #775200;
	}

	.theme-container.sidebar-open main.page:before {
		content: '';
		background: rgba(0, 0, 0, 0.7);
		width: 100%;
		height: 100%;
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		transition: 0.2s all ease-in-out;
	}

	aside.sidebar {
		background: #fff;
		border-right: 1px solid #eaecef;
		box-shadow: 0 0 3rem rgba(0, 0, 0, 0.2);
	}

	.is--homepage header.navbar {
		border: 0;
		background: #fff;
		box-shadow: none;
	}

	.theme-default-content:not(.custom) p a {
		white-space: nowrap;
	}
}